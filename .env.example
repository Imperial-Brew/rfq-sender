# SMTP Configuration
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
SMTP_FROM_EMAIL=your_email@example.com
SMTP_FROM_NAME=Your Name

# Exchange Configuration (if using Exchange instead of SMTP)
EXCHANGE_SERVER=exchange.example.com
EXCHANGE_USERNAME=your_domain\your_username
EXCHANGE_PASSWORD=your_password
EXCHANGE_EMAIL=your_email@example.com
EXCHANGE_FROM_NAME=Your Name

# Application Settings
USE_EXCHANGE=false
SUBJECT_PREFIX=[RFQ]
CC_EMAILS=cc1@example.com,cc2@example.com
BCC_EMAILS=bcc1@example.com,bcc2@example.com
MAX_ATTACHMENT_SIZE_MB=10
COMPANY_NAME=Your Company

# Security Settings
ENABLE_CUI_PROTECTION=true
CUI_WARNING_TEXT=This email contains Controlled Unclassified Information (CUI) that is subject to safeguarding or dissemination controls.
